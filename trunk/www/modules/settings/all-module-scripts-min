GO.settings.MainPanel=function(a){if(!a){a={}}a.labelWidth=150;a.border=false;a.padding=10;a.url=GO.settings.modules.settings.url+"data.php",a.baseParams={task:"load_settings",save:false};a.tbar=new Ext.Toolbar({cls:"go-head-tb",items:[{iconCls:"btn-save",text:"Opslaan",cls:"x-btn-text-icon",handler:function(){this.el.mask(GO.lang.waitMsgLoad);this.form.baseParams.save=true;this.form.submit({success:function(b,c){this.el.unmask()},failure:function(b,c){this.el.unmask()},scope:this})},scope:this},{iconCls:"btn-cancel",text:"Annuleren",cls:"x-btn-text-icon",handler:function(){this.form.baseParams.save=false;this.form.load()},scope:this}]});GO.settings.MainPanel.superclass.constructor.call(this,a)};Ext.extend(GO.settings.MainPanel,Ext.FormPanel,{afterRender:function(){GO.settings.MainPanel.superclass.afterRender.call(this);this.form.load()}});GO.moduleManager.addModule("settings",GO.settings.MainPanel,{title:GO.settings.lang.title,iconCls:"go-tab-icon-settings",admin:true});