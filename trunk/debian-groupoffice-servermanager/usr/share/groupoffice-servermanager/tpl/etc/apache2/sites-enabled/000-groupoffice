<VirtualHost *:80>
<Directory />
Options FollowSymLinks
AllowOverride None
</Directory>
<Directory /var/www/groupoffice/>
Options Indexes FollowSymLinks MultiViews
AllowOverride All
Order allow,deny
allow from all
</Directory>

Alias /local /var/www/groupoffice/local
ServerName *.{domain}
ErrorLog /var/log/apache2/groupoffice_error_log
VirtualDocumentRoot /var/www/groupoffice/%0/groupoffice
</VirtualHost>